<?xml version="1.0" encoding="UTF-8"?>
<persistence
  version="3.0"
  xmlns="https://jakarta.ee/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
  https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="sakila">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Actor</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Address</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Category</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.City</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Category</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Country</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Customer</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Film</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.FilmActor</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.FilmCategory</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.FilmText</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Inventory</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Language</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Payment</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Rental</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Staff</class>
    <class>edu.iit.sat.itmd4515.uid.uidlab3.db.schemas.Store</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sakila?useSSL=false"/>
      <property name="jakarta.persistence.jdbc.user" value="itmd4515"/>
      <property name="jakarta.persistence.jdbc.password" value="itmd4515"/>

      <property name="hibernate.current_session_context_class" value="thread"/>

      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/>

      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
